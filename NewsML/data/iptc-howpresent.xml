	<Topic Duid="howp1">
		<TopicType Scheme="IptcTopicType" FormalName="HowPresent"/>
		<FormalName Scheme="IptcHowPresent">Primary</FormalName>
		<Description xml:lang="en">The principal topic within the content.</Description>
	</Topic>
	<Topic Duid="howp2">
		<TopicType Scheme="IptcTopicType" FormalName="HowPresent"/>
		<FormalName Scheme="IptcHowPresent">Prominent</FormalName>
		<Description xml:lang="en">A major topic within the content.</Description>
	</Topic>
	<Topic Duid="howp3">
		<TopicType Scheme="IptcTopicType" FormalName="HowPresent"/>
		<FormalName Scheme="IptcHowPresent">Passing</FormalName>
		<Description xml:lang="en">A minor topic within the content.</Description>
	</Topic>
	<Topic Duid="howp4">
		<TopicType Scheme="IptcTopicType" FormalName="HowPresent"/>
		<FormalName Scheme="IptcHowPresent">RelatesTo</FormalName>
